<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="bottom_sheet_pillowColor">@color/pillow_light</item>
        <item name="bottom_sheet_textColor">@color/bs_text_light</item>
        <item name="bottom_sheet_background">@color/background_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="tabStyle">@style/TabStyle</item>
    </style>

    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#303030</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="GradientButtonCircle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="background">@drawable/gradient_circle</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#303030</item>
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- BottomSheetDialog personalizzato -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicator">@drawable/tab_selected</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>